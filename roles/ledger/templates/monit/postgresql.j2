{{ ansible_managed | comment }}

 check process postgresql with pidfile {{ ledger_postgresql_pidfile }}
  group database
  start program = "/usr/sbin/service postgresql start"
  stop  program = "/usr/sbin/service postgresql stop"
  if failed unixsocket {{ ledger_postgresql_sockfile }} protocol pgsql then restart
  if failed unixsocket {{ ledger_postgresql_sockfile }} protocol pgsql then alert
  if failed host localhost port {{ ledger_postgresql_port }} protocol pgsql then restart
  if failed host localhost port {{ ledger_postgresql_port }} protocol pgsql then alert
  if 5 restarts within 5 cycles then timeout
  depends on postgresql_bin
  depends on postgresql_init

check file postgresql_bin with path /usr/bin/pg_ctlcluster
  group database
  if failed checksum then unmonitor
  if failed permission 755 then unmonitor
  if failed uid root then unmonitor
  if failed gid root then unmonitor

check file postgresql_init with path {{ lib_systemd_directory }}/postgresql.service
  group database
  if failed checksum then unmonitor
  if failed permission 644 then unmonitor
  if failed uid root then unmonitor
  if failed gid root then unmonitor
