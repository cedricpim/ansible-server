{{ ansible_managed | comment }}

server {
  listen      {{ ansible_default_ipv4.address }}:443 ssl;
  server_name monit.{{ server }};
  access_log  {{ webserver_nginx_log_directory }}/keeweb.access.log;
  error_log   {{ webserver_nginx_log_directory }}/keeweb.error.log;

  location / {
    proxy_set_header         X-Real-IP $remote_addr;
    proxy_set_header         X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header         X-Forwarded-Proto $scheme;
    proxy_set_header         Host $http_host;
    proxy_read_timeout       5m;

    proxy_pass               http://127.0.0.1:{{ monit_port }};
    proxy_redirect           off;
  }
}
