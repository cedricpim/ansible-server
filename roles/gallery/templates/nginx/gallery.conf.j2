{{ ansible_managed | comment }}

server {
  listen      {{ ansible_default_ipv4.address }}:443 ssl;
  server_name gallery.{{ server }};
  access_log  {{ nginx_log }}/gallery.access.log;
  error_log   {{ nginx_log }}/gallery.error.log;

  location / {
    auth_basic           "Restricted Area";
    auth_basic_user_file conf/htpasswd.gallery;

    proxy_set_header         X-Real-IP $remote_addr;
    proxy_set_header         X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header         X-Forwarded-Proto $scheme;
    proxy_set_header         Host $http_host;
    proxy_read_timeout       5m;

    proxy_pass               http://127.0.0.1:{{ gallery_sigal_port }};
    proxy_redirect           off;
  }
}
