{{ ansible_managed | comment }}

[general]
  status_path = "{{ dav_vdirsyncer_config }}/status/"

#############################
######### Calendars #########
#############################

{% for calendar in dav_vdirsyncer_calendars %}

#### {{ calendar.title }} ####
[pair {{ calendar.id }}_calendar]
  a = "{{ calendar.id }}_calendar_local"
  b = "{{ calendar.id }}_calendar_remote"
  collections = null
  metadata = ["color", "displayname"]

[storage {{ calendar.id }}_calendar_local]
  type = "filesystem"
  path = "{{ dav_radicale_collections }}/collection-root/{{ dav_vdirsyncer_collections }}/{{ calendar.id }}"
  fileext = ".ics"

[storage {{ calendar.id }}_calendar_remote]
  type = "http"
  url = "{{ calendar.url }}"

{% endfor %}
