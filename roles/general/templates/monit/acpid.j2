{{ ansible_managed | comment }}

check process acpid
  matching "acpid"
  group system
  group acpid
  start program = "/usr/sbin/service acpid start"
  stop program  = "/usr/sbin/service acpid stop"
  if 5 restarts within 5 cycles then unmonitor
  depends on acpid_bin
  depends on acpid_rc

check file acpid_bin with path /usr/sbin/acpid
  group acpid
  include /etc/monit/templates/rootbin

check file acpid_rc with path /lib/systemd/system/acpid.service
  group acpid
  include /etc/monit/templates/rootrc
