{{ ansible_managed | comment }}

server {
  listen      {{ ansible_default_ipv4.address }}:443 ssl;
  server_name netdata.{{ server }};
  access_log  {{ nginx_log_directory }}/netdata.access.log;
  error_log   {{ nginx_log_directory }}/netdata.error.log;

  location / {
    auth_basic           "Restricted Area";
    auth_basic_user_file conf/htpasswd.netdata;

    proxy_set_header   X-Real-IP $remote_addr;
    proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Host $host;
    proxy_read_timeout 5m;

    proxy_pass     http://127.0.0.1:{{ netdata_port }};
    proxy_redirect off;
  }
}
