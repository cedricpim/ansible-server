{{ ansible_managed | comment }}

check process {{ server }} with pidfile /var/run/nginx.pid
  group {{ nginx_user }}
  start program = "/usr/sbin/service nginx start"
  stop program  = "/usr/sbin/service nginx stop"
  if failed host {{ server }} port 80  protocol http  request "/" then restart
  if failed host {{ server }} port 443 protocol https request "/" then restart
  if cpu is greater than 40% for 2 cycles then alert
  if cpu > 60% for 5 cycles then restart
  if 10 restarts with 10 cycles then unmonitor
  depend nginx_bin
  depend nginx_rc

check file nginx_bin with path "/usr/sbin/nginx"
  group nginx
  include /etc/monit/templates/rootbin

check file nginx_rc with path "/etc/init.d/nginx"
  group nginx
  include /etc/monit/templates/rootbin
